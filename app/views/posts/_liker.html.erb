<div class="d-flex justify-content-between">
  <div class="d-flex">  
      <%= image_tag liker.profile_pic.attached? ? liker.profile_pic : 'user.png', class: "img-thumbnail rounded-circle", style: "width: 2.5rem" %>
    <div class="d-flex flex-column mx-3 justify-content-center">
      <small class="fw-bold" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width:10rem"><%= link_to liker, class:"text-dark", style: "text-decoration:none", data: {turbo: 'false'} do %><%= liker.username %></small><% end %>
    </div>
  </div>
  <%= render 'layouts/shared/follow_state', user: liker %>
</div>